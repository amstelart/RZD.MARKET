//- Все примеси в этом файле должны начинаться c имени блока (search-form)

mixin search-form(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +search-form('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' search-form--' + modsList[i].trim();
      }
    }

  .search-form(class=allMods)&attributes(attributes)
    .search-form__inner!= text
