//- Все примеси в этом файле должны начинаться c имени блока (sidebar-card)

mixin sidebar-card(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +sidebar-card('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' sidebar-card--' + modsList[i].trim();
      }
    }

  .sidebar-card(class=allMods)&attributes(attributes)
    .sidebar-card__inner!= text
