//- Все примеси в этом файле должны начинаться c имени блока (store-card)

mixin store-card(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +store-card('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' store-card--' + modsList[i].trim();
      }
    }

  .store-card(class=allMods)&attributes(attributes)
    .store-card__inner!= text
