//- Все примеси в этом файле должны начинаться c имени блока (lk-card)

mixin lk-card(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +lk-card('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' lk-card--' + modsList[i].trim();
      }
    }

  .lk-card(class=allMods)&attributes(attributes)
    .lk-card__inner!= text
