//- Все примеси в этом файле должны начинаться c имени блока (show-control)

mixin show-control(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +show-control('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' show-control--' + modsList[i].trim();
      }
    }

  .show-control(class=allMods)&attributes(attributes)
    .show-control__inner!= text
