//- Все примеси в этом файле должны начинаться c имени блока (latest-news)

mixin latest-news(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +latest-news('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' latest-news--' + modsList[i].trim();
      }
    }

  .latest-news(class=allMods)&attributes(attributes)
    .latest-news__inner!= text
