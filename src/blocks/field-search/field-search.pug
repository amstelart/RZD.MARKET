//- Все примеси в этом файле должны начинаться c имени блока (field-search)

mixin field-search(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +field-search('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' field-search--' + modsList[i].trim();
      }
    }

  .field-search(class=allMods)&attributes(attributes)
    .field-search__inner!= text
