//- Все примеси в этом файле должны начинаться c имени блока (page-footer)

mixin page-footer(mods)

  //- Принимает:
  //-   mods  {string} - список модификаторов
  //- Вызов:
        +page-footer()
          p «Подвал»
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' page-footer--' + modsList[i].trim();
      }
    }

  footer.page-footer(class=allMods, role='contentinfo')&attributes(attributes)
    .page-footer__inner
      .page-footer__box
        +logo('/')
          img(src='img/logo.png')
        nav.main-nav
          ul.main-nav__list
            li.main-nav__item
              a.main-nav__link(href='page-about.html') О компании
            li.main-nav__item.main-nav__item--active
              a.main-nav__link(href='page-forum.html') Форум
            li.main-nav__item
              a.main-nav__link(href='page-shops.html') Магазин
            li.main-nav__item
              a.main-nav__link(href='page-contacts.html') Контакты
        .page-footer__btn
          button.btn Добавить объявление
          button.btn Добавить магазин
      .page-footer__copyright
        p Разработка сайта - <a href="http://www.2showbiz.ru">Showbiz Studio</a>
