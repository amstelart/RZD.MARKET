//- Все примеси в этом файле должны начинаться c имени блока (b-services)

mixin b-services(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +b-services('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' b-services--' + modsList[i].trim();
      }
    }

  .b-services(class=allMods)&attributes(attributes)
    .b-services__inner!= text