//- Все примеси в этом файле должны начинаться c имени блока (shops)

mixin shops(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +shops('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' shops--' + modsList[i].trim();
      }
    }

  .shops(class=allMods)&attributes(attributes)
    .shops__inner!= text
