//- Все примеси в этом файле должны начинаться c имени блока (subscription)

mixin subscription(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +subscription('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' subscription--' + modsList[i].trim();
      }
    }

  .subscription(class=allMods)&attributes(attributes)
    .subscription__inner!= text
